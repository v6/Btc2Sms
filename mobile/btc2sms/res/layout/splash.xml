<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo" android:layout_gravity="center_horizontal|bottom" android:background="@drawable/load_logo"/>
    <TextView
            android:layout_width="90dp"
            android:layout_height="281dp"
            android:text="@string/splash_loading"
            android:id="@+id/splash_loading" android:layout_gravity="center"
            android:textSize="20dp" android:textColor="#FFFFFF"/>
</FrameLayout>